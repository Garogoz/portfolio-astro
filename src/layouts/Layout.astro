---
// Supports weights 100-900
import '@fontsource-variable/onest';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';


interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="relative h-full w-full bg-white dark:bg-slate-950">
			<div class="relative h-full w-full bg-white dark:bg-slate-950">
				<!-- Light Mode Background -->
				<div class="absolute h-full w-full bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_70%,transparent_100%)] 
					 dark:bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] dark:bg-[size:14px_24px] dark:[mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)] z-0">
				</div>
		  
			<!-- Slot content -->
			<div class="relative z-10">
				<Header />
				<slot />
				<Footer />
			</div>
		  </div>
		<script src="../script.ts"></script>
		<script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
	</body>
</html>
<style is:global>
	:root {
		font-family: 'Onest Variable', sans-serif;
	}
	
	html {
		height: 100%;
		color:#060022; 
		scroll-behavior: smooth;
	}
	html.dark {
		color:#a2ffef; 
	}
	body {
		min-height: 100vh
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}

	/* width */
	::-webkit-scrollbar {
		width: 10px;
	}

	/* Track */
	::-webkit-scrollbar-track {
		background-color: #020617;
	}

	/* Handle */
	::-webkit-scrollbar-thumb {
		background: #777;
		border-radius: 5px;
	}

	/* Handle on hover */
	::-webkit-scrollbar-thumb:hover {
		background: #555;
	}
	

</style>

